<!-- MODAL LOGIN -->
<div id="modalL" class="modal">
  <div class="modal-content">
    <form action="/prijava" method="post">
      <i class="fas fa-times close" id="closeL"></i>
      <h1>PRIJAVA</h1>
      <div class="input-container">
        <label for="email" class="label-icon">
          <i class="fas fa-user"></i>
        </label>
        <input class="input-box" type="email" name="email" placeholder="E-mail..." id="email" required pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$">
      </div>
      <div class="input-container">
        <label for="password" class="label-icon">
          <i class="fas fa-lock"></i>
        </label>
        <input class="input-box" type="text" name="geslo" placeholder="Geslo..." id="geslo" required>
      </div>
      <a href="#"></a>
      <input type="submit" value="Prijava" class="input-submit">
    </form>
  </div>
</div>

